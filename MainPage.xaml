<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiRepro202401BtnPointerOver.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Button x:Name="button1" Style="{StaticResource PrimaryDialogButton}" Command="{Binding ClickCommand}" Text="Does not change background color on hover"/>
            <Button x:Name="button2" Style="{StaticResource PrimaryDialogButton}" Clicked="button2_Clicked" Text="DOES change background color on pointer hover"/>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
